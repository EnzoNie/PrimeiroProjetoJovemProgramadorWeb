<style>
    #editarModal {
        color: black;
    }
</style>
@model Aluno


<div id="editarModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
                <div class="mb-3">
                    <form asp-controller="Aluno" asp-action="EditarAluno" method="put" asp-route-id="@Model.Id">
                        <!-- ... seus campos de formulário ... -->
                        <p>Id: @Model.Id</p>
                        <div class="mb-3">
                            <label for="formGroupExampleInput" class="form-label">Nome</label>
                            <input type="text" asp-for="Nome" class="form-control" id="formGroupExampleInput" placeholder="Nome">
                        </div>
                        <div class="mb-3">
                            <label for="formGroupExampleInput" class="form-label">Idade</label>
                            <input type="text" asp-for="Idade" class="form-control" id="formGroupExampleInput" placeholder="Idade">
                        </div>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="validationDefault02" class="form-label">CEP</label>
                                <input type="text" asp-for="Cep" class="form-control" id="validationDefault02">
                            </div>
                    </form>
       
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-dark">Atualizar!</button>
                        <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Aluno">Fechar</a>
                    </div>
    </div>
</div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
                    $('#editarModal').modal('show');
            var id = button.data('id'); 
        });
    </script>
}